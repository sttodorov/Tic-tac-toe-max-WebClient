@model TicTacToeMax.WebClient.ViewModels.SatusJoinModel
<div class="row">
    <h4>Username: @ViewBag.Username</h4><h4>Wins: @Model.Status.Wins, Losses: @Model.Status.Losses</h4>
    <h2 style="display:inline-block;margin:0 auto">Available Games</h2>
    <form action="game/create" method="post">
        <input type="submit" class="btn btn-lg btn-success pull-left" style="display:inline-block" value="New Game"/>
    </form>
    <form action="logout" method="post">
        <input type="submit" class="btn btn-lg btn-warning pull-right" style="display:inline-block" value="Log out" />
    </form>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Host</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in @Model.Games)
            {
                <tr>
                    <td>
                        @game.Username
                    </td>
                    <td>
                        @Html.ActionLink("Join", "Join", "Game", new { id = game.Id }, new { @class = "btn btn-sm btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>